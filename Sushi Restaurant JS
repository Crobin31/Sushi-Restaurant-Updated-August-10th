let total = 0; 
let totalinfo = document.querySelector("#total-box"); 
let iteminfo = document.querySelector("#item-box"); 
const sushiprices = [5.99, 3.99, 4.99, 1.99]; 
const sushiitems = [0, 0, 0, 0]; 
const orderhistory = document.querySelector(".scroll-box");
const orders = []; 

function ordersDisplay(x){
  return x.join("<br>");
}


function addsashimi(){
  total += sushiprices[0]; // add to the number
  sushiitems[0] += 1; 
  totalinfo.innerHTML = total.toFixed(2); // update the display with 2 decimal places
  iteminfo.innerHTML = sushiitems; 
  orders.push("Sashimi x1"); 
  orderhistory.innerHTML = ordersDisplay(orders); 
}

function removesashimi(){
  if (sushiitems[0] > 0){
    sushiitems[0] -= 1; 
    total -= sushiprices[0];
    if (total < 0) total = 0;
    totalinfo.innerHTML = total.toFixed(2);
    iteminfo.innerHTML = sushiitems;
    const i = orders.lastIndexOf("Sashimi x1");
    if (i !== -1) orders.splice(i, 1);
    orderhistory.innerHTML = ordersDisplay(orders); 
  }
}

